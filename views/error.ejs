<%- layout('/layouts/boilerplate') -%>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= err.name %></h4>
      <p><%= err.message %></p>
      <hr />
      <% if(process.env.NODE_ENV === 'development') { %>
      <p class="mb-0"><%= err.stack %></p>
      <% } %>
    </div>
  </div>
</div>
