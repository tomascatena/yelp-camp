<%- layout('/layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">Edit Campground <%= campground.title %></h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%= campground.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%= campground.location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            name="campground[price]"
            aria-label="Amount (to the nearest dollar)"
            value="<%= campground.price %>"
          />
          <span class="input-group-text">.00</span>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          rows="5"
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
        >
<%= campground.description %>
        </textarea>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          value="<%= campground.image %>"
        />
      </div>

      <div class="row">
        <div class="col-md-6 text-left">
          <a
            class="btn btn-secondary"
            href="/campgrounds/<%= campground._id  %> "
          >
            <i class="fas fa-chevron-left"></i> Back To Campground</a
          >
        </div>
        <div class="col-md-6 text-right">
          <button class="btn btn-primary">Update Campground</button>
        </div>
      </div>
    </form>
  </div>
</div>
